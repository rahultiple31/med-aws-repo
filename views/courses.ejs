<%- include("partials/head") %>
<%- include("partials/header") %>

<main class="page-main">
  <section class="page-hero">
    <div class="container">
      <p class="eyebrow">Programs</p>
      <h1>Courses Designed For Employment</h1>
      <p>Each course includes live sessions, assignments, projects, and placement support.</p>
    </div>
  </section>

  <section class="section">
    <div class="container card-grid">
      <% courses.forEach((course) => { %>
        <article class="card course-card">
          <h2><%= course.title %></h2>
          <p><%= course.description %></p>
          <div class="meta-col">
            <span><strong>Duration:</strong> <%= course.duration %></span>
            <span><strong>Mode:</strong> <%= course.mode %></span>
            <span><strong>Fee:</strong> <%= course.fee %></span>
          </div>
          <a class="btn btn-primary" href="/contact?course=<%= encodeURIComponent(course.title) %>">Apply Now</a>
        </article>
      <% }) %>
    </div>
  </section>
</main>

<%- include("partials/footer") %>
