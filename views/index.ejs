<%- include("partials/head") %>
<%- include("partials/header") %>

<main>
  <section class="hero">
    <div class="container hero-grid">
      <div>
        <p class="eyebrow">Future Ready Learning</p>
        <h1>Build Career Skills With Industry Mentors</h1>
        <p class="hero-copy">
          Join a compact academy that focuses on real projects, interview readiness,
          and placement support from day one.
        </p>
        <div class="hero-actions">
          <a class="btn btn-primary" href="/contact">Book Free Counselling</a>
          <a class="btn btn-ghost" href="/courses">Browse Courses</a>
        </div>
      </div>
      <div class="hero-card">
        <h3>Why Students Choose Us</h3>
        <ul>
          <li>Live + recorded classes</li>
          <li>Weekly coding labs and assessments</li>
          <li>1:1 doubt support and mentorship</li>
          <li>Resume and interview preparation</li>
        </ul>
      </div>
    </div>
  </section>

  <section class="stats">
    <div class="container stats-grid">
      <article><h2>1200+</h2><p>Students Trained</p></article>
      <article><h2>30+</h2><p>Mentor Experts</p></article>
      <article><h2>92%</h2><p>Course Completion</p></article>
      <article><h2>4.8/5</h2><p>Average Rating</p></article>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="section-head">
        <p class="eyebrow">Popular Programs</p>
        <h2>Career Tracks</h2>
      </div>
      <div class="card-grid">
        <% courses.forEach((course) => { %>
          <article class="card">
            <h3><%= course.title %></h3>
            <p><%= course.description %></p>
            <div class="meta">
              <span><%= course.duration %></span>
              <span><%= course.mode %></span>
              <span><%= course.fee %></span>
            </div>
          </article>
        <% }) %>
      </div>
      <div class="center">
        <a class="btn btn-primary" href="/courses">View All Courses</a>
      </div>
    </div>
  </section>

  <section class="section accent">
    <div class="container cta-row">
      <div>
        <p class="eyebrow">Admissions Open</p>
        <h2>Get a Learning Plan Built For Your Goal</h2>
        <p>Our team will map your current skill level and suggest the fastest track.</p>
      </div>
      <a class="btn btn-dark" href="/admissions">Admission Process</a>
    </div>
  </section>
</main>

<%- include("partials/footer") %>
